%table{:class => "table table-hover" }
  %thead
    %tr
      %th Name
      %th Role
  %tbody
    - @current_groups.each do |group|
      %tr
        %td
          =link_to group.name, group
        %td
          = role_for(group, current_user)
        %td
          = link_to 'Leave', {:action => :leave, :id => group.id}, :class => 'btn btn-danger', :'data-placement' => 'bottom', :title => 'Leave group'
