%h2 Active Quests
%table{:class => "table table-hover"}
  %thead 
    %tr
      %th Owner
      %th Name
      %th Description
      %th Last Activity
  %tbody
    - @active.each do |campaign|
      %tr
        %td
          -campaign.group.user_id==nil ? owner='owner_group' : owner='owner_personal'
          =render owner, :campaign => campaign
          =campaign.group.name
        %td
          %a{href: campaign_path(campaign)}= campaign.name
        %td= campaign.description
        %td
          %span{ :class => "label label-age-#{campaign.age}"}
            = time_ago_in_words(campaign.updated_at)
%h2 Inactive Quests
%table{:class => "table table-hover"}
  %thead 
    %tr
      %th Owner
      %th Name
      %th Description
      %th Status
      %th Last Activity
  %tbody
    - @inactive.each do |campaign|
      %tr
        %td
          -campaign.group.user_id==nil ? owner='owner_group' : owner='owner_personal'
          =render owner, :campaign => campaign
          =campaign.group.name
        %td
          %a{href: campaign_path(campaign)}= campaign.name
        %td= campaign.description
        %td
          %span{ :class => "label label-#{campaign.status_class}"}
